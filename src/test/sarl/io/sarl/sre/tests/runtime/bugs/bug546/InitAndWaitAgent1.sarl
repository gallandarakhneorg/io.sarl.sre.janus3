package io.sarl.sre.tests.runtime.bugs.bug546

import io.sarl.core.Lifecycle
import io.sarl.sre.tests.testutils.TestingAgent

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @see https://github.com/sarl/sarl/issues/546
 */
package agent InitAndWaitAgent1 extends TestingAgent {

	uses Lifecycle

	var nbEvents = 0

	override runAgentTest : RunPolicy {
		typeof(SendingAgent).spawn(rawResultMap, ID)
		return null
	}

	on MyEvent {
		synchronized (this) {
				nbEvents++
				if (nbEvents === Bug546::NB_EVENTS) {
					killMe
				}
		}
	}

}
