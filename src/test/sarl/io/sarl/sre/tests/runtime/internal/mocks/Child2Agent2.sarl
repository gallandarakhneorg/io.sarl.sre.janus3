package io.sarl.sre.tests.runtime.internal.mocks

import io.sarl.core.ContextJoined
import io.sarl.core.ExternalContextAccess
import io.sarl.core.Lifecycle
import io.sarl.core.Schedules
import io.sarl.lang.core.AgentContext
import io.sarl.sre.tests.testutils.TestingAgent

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
agent Child2Agent2 extends TestingAgent {
	
	uses Schedules, ExternalContextAccess, Lifecycle

	override runAgentTest : RunPolicy {
		val newContext = getAgentInitializationParameters.get(1) as AgentContext
		in(500) [
			if (join(newContext.ID, newContext.defaultSpace.spaceID.ID)) {
				in(500) [killMe]
			}
		]
		return null
	}

	on ContextJoined {
		addResult("CHILD2")
	}

}
