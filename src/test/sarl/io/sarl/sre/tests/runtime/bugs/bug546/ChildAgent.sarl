package io.sarl.sre.tests.runtime.bugs.bug546

import io.sarl.core.DefaultContextInteractions
import io.sarl.core.Lifecycle
import io.sarl.sre.tests.testutils.TestingAgent
import java.util.UUID

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @see https://github.com/sarl/sarl/issues/546
 */
package agent ChildAgent extends TestingAgent {

	uses DefaultContextInteractions, Lifecycle

	var waiterId : UUID
	
	override runAgentTest : boolean {
		var id = getAgentInitializationParameters.get(1) as UUID
		synchronized (this) {
			this.waiterId = id
		}
		emit(new Hello) [
			var id2 : UUID
			synchronized (this) {
				id2 = this.waiterId
			}
			return it.UUID == id2
		]
		return false
	}
	
	on KillYou {
		killMe
	}

}
