package io.sarl.sre.tests.runtime.services.executor

import io.sarl.core.Destroy
import io.sarl.core.Lifecycle
import io.sarl.core.Schedules
import io.sarl.sre.tests.testutils.TestingAgent
import java.util.ArrayList

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
package agent GetActiveTasksAgent extends TestingAgent {
	
	uses Schedules, Lifecycle
	
	override runAgentTest : RunPolicy {
		var t = every(500) []
		t.setName( "T1")
		addResult(new ArrayList(getActiveTasks))
		t = in(1000) [
			killMe
		]
		t.setName("T2")
		addResult(new ArrayList(getActiveTasks))
		return null
	}

	on Destroy {
		addResult(new ArrayList(getActiveTasks))
	}

}
