package io.janusproject.sre.injection.services.time

import com.google.inject.AbstractModule
import io.janusproject.sre.services.time.SimulatedTimeService
import io.janusproject.sre.services.time.TimeService
import javax.inject.Singleton

/** 
 * Module for the time services that are based on a simulation time.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @since 2.0.7.0
 */
class SimulatedTimeModule extends AbstractModule {

	protected override configure {
		typeof(TimeService).bind.to(typeof(SimulatedTimeService)).in(typeof(Singleton))
	}

}
