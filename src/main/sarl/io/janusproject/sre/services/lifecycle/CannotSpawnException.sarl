package io.janusproject.sre.services.lifecycle

import java.text.MessageFormat
import io.sarl.lang.core.Agent

/** 
 * This exception is thrown when an agent cannot be spawned.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
class CannotSpawnException extends RuntimeException {

	/**
	 * @param agentClazz the type of the agent to spawn.
	 * @param cause the cause of the exception.
	 */
	new (agentClazz : Class<? extends Agent>, cause : Throwable = null) {
		super(MessageFormat::format(
			Messages::CannotSpawnException_0,
			agentClazz, cause?.localizedMessage),
			cause)
	}

	/** Constructor.
	 */
	new {
	}

}
