package io.sarl.sre.injection.spaces

import com.google.inject.AbstractModule
import io.sarl.sre.spaces.JanusEventSpaceSpecification
import io.sarl.sre.spaces.JanusOpenEventSpaceSpecification
import io.sarl.sre.spaces.JanusRestrictedAccessEventSpaceSpecification
import io.sarl.lang.core.EventSpaceSpecification
import io.sarl.util.OpenEventSpaceSpecification
import io.sarl.util.RestrictedAccessEventSpaceSpecification
import javax.inject.Singleton

/** 
 * Module configures SARL spaces.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
public class SpacesModule extends AbstractModule {

	protected override configure {
		typeof(EventSpaceSpecification).bind.to(typeof(JanusEventSpaceSpecification)).in(typeof(Singleton))
		typeof(OpenEventSpaceSpecification).bind.to(typeof(JanusOpenEventSpaceSpecification)).in(typeof(Singleton))
		typeof(RestrictedAccessEventSpaceSpecification).bind.to(typeof(JanusRestrictedAccessEventSpaceSpecification)).in(typeof(Singleton))
	}

}
